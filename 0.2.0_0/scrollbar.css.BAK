::-webkit-scrollbar { background: #d6d4d2; border: 1px solid #a19d9a; }
::-webkit-scrollbar-thumb { background: #97b8e2; }
::-webkit-scrollbar-thumb:vertical {
	background-repeat:	no-repeat,	repeat-y;
	background-size:	100%;
	background-position:	50%;
	-webkit-box-shadow:	0 -1px 0 #5e7ea5, 0 1px 0 #5e7ea5;
}
::-webkit-scrollbar-thumb:horizontal {
	background-repeat:	no-repeat,	repeat-x;
	background-size:	contain;
	background-position:	50%;
	-webkit-box-shadow:	-1px 0 0 #5e7ea5, 1px 0 0 #5e7ea5;
}
